 <h1>Books</h1>
  <table>
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
     <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :image %></td>
        <td><%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
