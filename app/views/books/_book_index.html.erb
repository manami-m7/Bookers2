        <h2>Books</h2>
          <table class="table table-hover">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
             <tbody>
                <% books.each do |book| %>
                  <tr>
                    <td><%= attachment_image_tag book.user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg" %></td>
                    <td><%= link_to book_path(book.id) do %>
                    <%= book.title %>
                    <% end %>
                    </td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
            </tbody>
          </table>