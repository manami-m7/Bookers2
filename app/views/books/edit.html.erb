
<div class="container pt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model:@book, local: true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Update Book', class: 'btn btn-success' %>
        <% end %>
        <div class="style"><%= link_to "Show", book_path(@book.id) %></div>
        <div class="style">|</div>
        <div class="style"><%= link_to "Back", books_path %></div>
    </div>
  </div>
</div>


