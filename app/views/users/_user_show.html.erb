<h2 class="mt-4">User info</h2>
      <%= attachment_image_tag user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th><th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th><th><%= user.introduction %></th>
            </tr>
            <tr>
              <th>follows</th><th><%= render 'users/follows_stats' %></th>
            </tr>
            <tr>
              <th>followers</th><th><%= render 'users/followers_stats' %></th>
            </tr>
          </tbody>
        </table>

  <div class="row">
    <% if current_user.id == user.id %>
        <%= link_to edit_user_path(user), class: "btn btn-outline-dark btn-block" do %>
          <span class="fas fa-user-cog"></span>
        <% end %>
    <% else %>
        <%= render 'users/user_follow_form', user: user %>
    <% end %>
  </div>