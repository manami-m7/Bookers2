<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'users/user_show', user: current_user %>

       <%= render 'books/book_new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1 pt-md-3">
          <h2>Users</h2>
          <table class="table">
            <head>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </head>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= render 'follow_counts', user: user %></td>
                <td>
                  <% if current_user.id != user.id %>
                    <%= render 'follow_form', user: user %>
                  <% end %>
                </td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>